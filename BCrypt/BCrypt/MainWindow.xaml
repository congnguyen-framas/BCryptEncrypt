<Window x:Class="BCrypt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BCrypt"
        mc:Ignorable="d"
        Title="BCrypt" Height="420" Width="1374">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical">
            <TextBox x:Name="txtPass" Text="Pass" FontSize="20"/>
            <TextBox x:Name="txtPassHash" Text="Pass" FontSize="20"/>
            <Button x:Name="btnEncrypt" Content="HashPassword" FontSize="20" Click="btnEncrypt_Click"></Button>

        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Vertical">
            <TextBlock x:Name="labResult"/>
            <Button x:Name="btnDecrypt" Content="Verify" FontSize="20" Click="btnDecrypt_Click"></Button>

        </StackPanel>
    </Grid>
</Window>
